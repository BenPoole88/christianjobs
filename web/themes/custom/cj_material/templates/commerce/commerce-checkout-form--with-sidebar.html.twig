{#
/**
 * @file
 * Two column template for the checkout form.
 *
 * Available variables:
 * - form: The form.
 *
 * @ingroup themeable
 */
#}
<div class="layout-checkout-form card card-main clearfix">
  <div class="row card-item card-text">
    <div class="layout-region col-xs-12 col-md-8 first-md">
      {{ form|without('sidebar', 'actions') }}
    </div>
    <div class="layout-region col-xs-12 col-md-4 first-xs">
      {{ form.sidebar }}
    </div>
  </div>
  <div class="layout-region card-item card-actions divider-top">
      {{ form.actions }}
  </div>
</div>
