{#
/**
 * @file
 * Default theme implementation to display a two-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
    'layout',
    'layout--cj-3-9',
    'row',
  ]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
    {% if content.top %}
      <div {{  region_attributes.top.addClass('layout__region', 'layout__region--top', 'col-xs-12', 'col-md-12', 'col-lg-12', 'first-xs') }}>
        {{ content.top }}
      </div>
    {% endif %}
    {% if content.content %}
      <div {{ region_attributes.content.addClass('layout__region', 'layout__region--content', 'col-xs-12', 'col-md-8', 'col-lg-8', 'first-md') }}>
        {{ content.content }}
      </div>
    {% endif %}
    {% if content.aside %}
      <div {{ region_attributes.aside.addClass('layout__region', 'layout__region--aside', 'col-xs-12', 'col-md-4', 'col-lg-4', 'first-xs', 'card') }}>
        {{ content.aside }}
      </div>
    {% endif %}
    {% if content.bottom %}
      <div {{  region_attributes.top.addClass('layout__region', 'layout__region--bottom', 'col-xs-12', 'col-md-12', 'col-lg-12', 'first-xs') }}>
        {{ content.bottom }}
      </div>
    {% endif %}
  </div>
{% endif %}
